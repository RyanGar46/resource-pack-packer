{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Config",
  "description": "A file that stores information on how each version of a resource should be built",
  "type": "object",
  "properties": {
    "directory": {
      "description": "The directory in which the resource pack is located",
      "type": "string"
    },
    "name_scheme": {
      "description": "How each built pack should be named",
      "type": "string"
    },
    "configs": {
      "description": "A list of every configuration",
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "mc_versions": {
            "description": "A list of Minecraft versions. Should go newest to oldest",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "textures": {
            "description": "Options relating to textures",
            "type": "object",
            "properties": {
              "delete": {
                "description": "Should textures be automatically striped",
                "type": "boolean"
              },
              "ignore": {
                "description": "What texture folders should be ignored",
                "type": "array",
                "items": {
                  "type": "string"
                }
              } 
            },
            "required": [
              "delete",
              "ignore"
            ]
          },
          "regenerate_meta": {
            "description": "Should the pack.mcmeta file be updated for this",
            "type": "boolean"
          },
          "minify_json": {
            "description": "Should all json files located in the pack be striped of all indentation",
            "type": "boolean"
          },
          "delete_empty_folders": {
            "description": "Should all empty folders be removed",
            "type": "boolean"
          },
          "patches": {
            "description": "The patches that should be applied to the pack",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "mc_versions",
          "textures"
        ]
      }
    }
  },
  "required": [
    "directory",
    "name_scheme",
    "configs"
  ]
}